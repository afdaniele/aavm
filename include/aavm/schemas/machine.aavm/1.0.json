{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "aavm-machine-schema-1-0",
    "title": "",
    "type": "object",
    "properties": {
        "schema": {
            "type": "string",
            "const": "1.0"
        },
        "version": {
            "type": "string",
            "pattern": "[0-9]+\\.[0-9]+(\\.[0-9]+)?"
        },
        "description": {
            "type": "string",
            "minLength": 1
        },
        "runtime": {
            "type": "string",
            "minLength": 1
        },
        "configuration": {
            "type": "object",
            "description": "Object that will be unpacked as kwargs in docker.containers.create()",
            "additionalProperties": true
        },
        "machine": {
            "type": ["string", "null"]
        }
    },
    "required": [
        "schema",
        "version",
        "description",
        "runtime",
        "machine"
    ],
    "additionalProperties": false
}